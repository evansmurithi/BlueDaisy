<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/bd_padding"
    android:paddingRight="@dimen/bd_padding"
    android:paddingTop="@dimen/bd_padding"
    android:paddingBottom="@dimen/bd_padding"
    android:background="?selectableItemBackground"
    android:descendantFocusability="blocksDescendants"
    >

    <TextView
        android:id="@+id/text_device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="@dimen/bd_font_large"
        />

    <TextView
        android:id="@+id/text_device_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text_device_name"
        android:textSize="@dimen/bd_font_small"
        />

</RelativeLayout>